{
	"name": "Jira RTL",
	"description":"Makes text parts of Jira work Right-To-Left",
	"manifest_version": 2,
	"version": "1.0",
	"background": {
		"scripts": ["script.js"] 
	},
	"icons": {
		"16":"images/16.png",
		"48":"images/48.png",
		"128":"images/128.png"
	},
	"browser_action": {
		"name": "Enable RTL On JIRA",
		"default_icon": {
			"19":"images/16.png",
			"38":"images/48.png"
		}
	},
	"permissions":[
		"webNavigation",
		"tabs",
		"https://*.atlassian.net/*"
	],
	"content_scripts": [{
		"matches": [
			"https://*.atlassian.net/*",
			"https://*.atlassian.net/"
		],
		"css":["style.css"],
		"js":["inject.js"]
	}]
}
